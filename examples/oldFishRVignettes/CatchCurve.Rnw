#--------------------------------------------------------------------------------------
cc.sim.book <- function(Ages,Z.param,No.param,v) {
  make.No.ycl <- function(Ages,param) {                       # Creates vector of initial year-class sizes for each year-class (obviously)
    No <- rnorm(length(Ages),param$mean,param$mean*param$cv)  #   Initiate No vector with randomly select values from a Normal Distribution
    md <- rep(1,length(Ages))                                 #   Initiate the multiplication vector with 1s
    if (param$delta!=1) {                                     #   If a delta value is sent then must change the multiplication vector
      if (param$dstdy) {                                      #   If a steady change, ...
        md[param$dage:length(Ages)] <- param$delta            #   ... replace 1s with delta value
      } else {                                                #   If a non-steady change, ...
        for (i in (param$dage:length(Ages))) {                #   ... replace 1s with delta raised to power of number of ages
          md[i] <- param$delta^(i-param$dage+1)               #       past t1
        }
      }
    }
    No <- No*md                                               #   Adjust initial No values by the multiplier vector
    return(No)
  }

  make.Z.ycl <- function(Ages,param) {                        # Creates vector of initial Zs for each year-class (concept is same as make.No)
    Z <- rnorm(length(Ages),param$mean,param$mean*param$cv)   #   Initiate Z vector with randomly select values from a Normal Distribution
    md <- rep(1,length(Ages))                                 #   Initiate the multiplication vector with 1s
    if (param$delta!=1) {                                     #   If a delta value is sent then must change the multiplication vector
      if (param$dstdy) {                                      #   If a steady change, ...
        md[param$dage:length(Ages)] <- param$delta            #   ... replace 1s with delta value
      } else {                                                #   If a non-steady change, ...
        for (i in (param$dage:length(Ages))) {                #   ... replace 1s with delta raised to power of number of ages
          md[i] <- param$delta^(i-param$dage+1)               #       past t1
        }
      }
    }
    Z <- Z*md                                                 #   Adjust initial Z values by the multiplier vector
    return(Z)
  }

  make.Z.age <- function(Ages,param) {
    Ages.adj <- Ages                                          #   Initiate ages vector with the list of ages
    if (param$delta!=1) {                                     #   If a delta value is sent then must change the multiplication vector
      if (param$dstdy) {
        for (i in (param$dage:length(Ages))) {
          Ages.adj[i] <- (1-param$delta)*Ages.adj[param$dage]+param$delta*Ages.adj[i]
        }
      } else {
        for (i in (param$dage:length(Ages))) {
          Ages.adj[i] <- Ages.adj[i-1]+param$delta^(i-param$dage)
        }
      }
    }
    return(Ages.adj)
  }

  No <- make.No.ycl(Ages,No.param)                                  # Vector of initial year-class sizes
  if (Z.param$YCL) {                                                # If Z will vary by year-class ...
    Z <- make.Z.ycl(Ages,Z.param)                                   #   Vector of Zs for each year-class
    N <- No*exp(-Z*Ages)                                            #   Population sizes for each age
  } else {                                                          # or if Z varies by age (irrespective of year-class)
    Z <- rnorm(length(Ages),Z.param$mean,Z.param$mean*Z.param$cv)   #   Create Z vector with randomly select values from a Normal Distribution
    Ages.adj <- make.Z.age(Ages,Z.param)                            #   Adjust age vector for handling change in Zs by age
    N <- No*exp(-Z*Ages.adj)                                        #   Population sizes for each age
  }
  C <- v*N                                                          # Calculate catch from population size and vulnerabilities
#  return(list(Z,No,N,C))
  return(C)
}


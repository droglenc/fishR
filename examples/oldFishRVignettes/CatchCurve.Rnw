      \hline\hline
      \widen{-2}{7}{Age} & $Catch$ \\
      \hline
      \widen{0}{5}{0} & 39 \\
      \widen{0}{0}{1} & 93 \\
      \widen{0}{0}{2} & 112 \\
      \widen{0}{0}{3} & 45 \\
      \widen{0}{0}{4} & 58 \\
